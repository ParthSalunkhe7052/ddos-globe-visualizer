# DDoS Globe Visualizer Environment Configuration

# Backend mode and data
DShieldMode=live
USE_MOCK_DATA=false

# AbuseIPDB API Key (optional)
# ABUSEIPDB_KEY=your_abuseipdb_api_key_here

# AlienVault OTX API Key (optional; enables OTX feed)
# OTX_API_KEY=your_otx_api_key_here

# Abuse.ch keys (optional)
# ABUSECH_AUTH_KEY=your_abusech_auth_key_here
# ABUSECH_API_KEY=your_abusech_api_key_here

# Polling and cache (seconds)
ABUSEIPDB_INTERVAL=300
DSHIELD_INTERVAL=300
LIVEFEED_POLL_INTERVAL_SEC=30
MAX_CACHE_AGE_SEC=3600
LIVEFEED_MAX_BUFFER=5000

# GeoLite database path (optional local DB)
GEOLITE_DB_PATH=ml_model/GeoLite2-City.mmdb

# Backend server
WS_HOST=0.0.0.0
WS_PORT=8000
DEBUG=false

# Frontend (Vite)
VITE_BACKEND_URL=http://127.0.0.1:8000
VITE_WS_URL=ws://127.0.0.1:8000/ws/live
